#!/bin/bash
# Status check

. /srv/dcp/bin/dcp_common

usage()
{
    cat <<EOF
    usage: $1 [-f] [<hosts>]
       Changelog of hosts. Default to all hosts
       [-f]  pass --name-only to git log (list files)
EOF
    return 0
}

while getopts ":vf" opt; do
    case $opt in
#	v ) verbose=1;;
	f ) g_opts="$g_opts --name-only";;
	\? ) usage
            exit 1;;
	* ) usage
            exit 1;;
    esac
done
shift $(($OPTIND - 1))

log_ () {
    host=$1

    cd ${HOST_STORE}/$host
    echo "$host"
    echo "git log :"
    git log $g_opts
    echo
}


# Which hosts need a log ?
if [ $# -eq 0 ]; then
    hosts=$(cd $HOST_STORE; find * -maxdepth 0  -type d)
else
    hosts="$@"
fi

for h in $hosts; do
    log_ $h
done
