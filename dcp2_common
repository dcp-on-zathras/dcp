if [[ -z "$GIT_AUTHOR_NAME" && -z "$GIT_AUTHOR_EMAIL" ]]; then
   cat <<EOF
You must specify GIT_AUTHOR_NAME and GIT_AUTHOR_EMAIL
These are usually specified in your .profile and passed
via sudo environment.
EOF
   exit 1
fi

